<%- include('partials/header') %> 

<div class="ui main text container segment">
    <div class="ui huge header">Edit <%= foundBlog.title %></div>
    <form class="ui form" action="/blogs/<%= foundBlog._id %>?_method=PUT" method="POST">
        <div class="field">
            <label>
                Title

            </label>
            <input type="text" name="blog[title]" value="<%= foundBlog.title %>" placeholder="title">
            
        </div>
        <div class="field">
            <label>
                Image
                
            </label>
                  <input type="text" name="blog[image]" value="<%= foundBlog.image %> " placeholder="image">
                  
        </div>
        <div class="field">
            <label>
                Blog Content
            </label>
            <textarea name="blog[body]" placeholder="blog post goes here" cols="30" rows="10">
                <%= foundBlog.body %> 

            </textarea>
            
        </div>
      
        <button type="submit" class="ui violet basic button">Update</button>

            
    </form>
</div>
<%- include('partials/footer') %> 